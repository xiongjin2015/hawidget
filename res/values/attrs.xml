<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="HaCycle">
        <attr name="view_height" format="dimension" />
        <attr name="index_size" format="dimension" />
        <attr name="index_gravity">
            <flag name="left" value="0" />
            <flag name="centre" value="1" />
            <flag name="right" value="2" />
        </attr>
    </declare-styleable>

    <!-- GridView数据块自定义属性 -->
    <declare-styleable name="HaSectionView">
        <attr name="title_text" format="string" />
        <attr name="title_textColor" format="color" />
        <attr name="title_textSize" format="dimension" />
        <attr name="more_text" format="string" />
        <attr name="more_textColor" format="color" />
        <attr name="more_textSize" format="dimension" />
        <attr name="more_src" format="reference" />
        <attr name="moreVisibility">
            <enum name="visible" value="0x00000000" />
            <enum name="invisible" value="0x00000004" />
            <enum name="gone" value="0x00000008" />
        </attr>
        <attr name="spacing" format="dimension" />
    </declare-styleable>

</resources>